<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-5dp"
    tools:layout_editor_absoluteY="1865dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="820dp"
            android:scaleType="center"
            android:src="@drawable/vecteezy_nature_beautiful_town_in_night_13115021" />

        <TextView
            android:id="@+id/txtGreetings"
            android:layout_width="344dp"
            android:layout_height="47dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/dm_sans"
            android:text="Good Day"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="344dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/dm_sans"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/cardView6"
            app:layout_constraintEnd_toEndOf="@+id/txtGreetings"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtGreetings"
            app:layout_constraintTop_toBottomOf="@+id/txtGreetings"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="344dp"
            android:layout_height="190dp"
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="#512DA8"
            app:cardCornerRadius="18dp"
            app:layout_constraintBottom_toTopOf="@id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="293dp"
                android:layout_height="119dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/dm_sans"
                android:text="Loading..."
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:typeface="normal" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/dm_sans"
                android:shadowColor="#000000"
                android:text="Daily Affirmations"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <WebView
            android:id="@+id/weatherCard"
            android:layout_width="330dp"
            android:layout_height="183dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="38dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWeather"
            app:layout_constraintVertical_bias="0.0" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="345dp"
            android:layout_height="225dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#512DA8"
            app:cardCornerRadius="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView6">

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="130dp"
                android:layout_height="63dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/finding">

            </ImageView>

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/dm_sans"
                android:paddingStart="30dp"
                android:text="0*C"
                android:textColor="#ffffff"
                android:textSize="34sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/weatherCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/dm_sans"
                android:paddingStart="30sp"
                android:text="---------"
                android:textColor="#ffffff"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:id="@+id/cityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/dm_sans"
                android:paddingStart="30sp"
                android:text="Loading..."
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txtWeather"
                android:layout_width="291dp"
                android:layout_height="39dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/dm_sans"
                android:shadowColor="#100101"
                android:text="Weather"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>